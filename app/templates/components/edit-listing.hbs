{{#if editListingForm}}
<h3>Update {{Listing.title}}</h3>
<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=listing.title id="title"}}
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    {{input value=listing.price id="price"}}
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    {{input value=listing.location id="location"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{input value=listing.description id="description"}}
  </div>
  <div class="form-group">
    <label for="photoURL">Enter a photo url</label>
    {{input value=listing.photoURL id="photoURL"}}
  </div>
  <button class="btn" {{action 'edit' listing}}>Save</button>
  <button class="btn" {{action 'destroyListing' listing}}>Delete</button>
</form>
{{else}}
  <button {{action 'editListingForm'}}>Edit Listing</button>
{{/if}}
